{
    "name": "svelte-app",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public --no-clear",
        "lint:check": "npx eslint *.js --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "lint:fix": "npx eslint --fix *.js --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "format:check": "npx prettier --check . --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "format:fix": "npx prettier --write . --ignore-path .gitignore --no-error-on-unmatched-pattern",
        "format": "npm run format:fix && npm run format:check",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "eslint": "^8.6.0",
        "eslint-plugin-functional": "^4.1.1",
        "eslint-plugin-sonarjs": "^0.11.0",
        "husky": "^7.0.4",
        "prettier": "^2.5.1",
        "rollup": "^2.3.4",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sv-bootstrap-modal": "^1.0.3",
        "svelte": "^3.45.0",
        "svelte-loading-spinners": "^0.1.7"
    },
    "dependencies": {
        "@apollo/client": "^3.5.6",
        "@apollo/react-hooks": "^4.0.0",
        "@auth0/auth0-spa-js": "^1.19.3",
        "graphql": "^16.2.0",
        "sirv-cli": "^1.0.0",
        "sveltestrap": "^5.7.0"
    }
}
